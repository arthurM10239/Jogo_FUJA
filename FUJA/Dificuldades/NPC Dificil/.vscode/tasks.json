{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-and-run",
      "type": "shell",
      "command": "gcc",
      "args": [
        "main.c",
        "-o",
        "game.exe",
        "-IC:/msys64/mingw64/include",
        "-LC:/msys64/mingw64/lib",
        "-lraylib",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm",
        "&&",               // <-- Importante: sÃ³ executa se compilar
        "game.exe"
      ],
      "options": {
      "shell": {
      "executable": "C:\\Windows\\System32\\cmd.exe",
      "args": ["/d", "/c"]
      }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
